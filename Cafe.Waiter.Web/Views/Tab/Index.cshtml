@model IEnumerable<Cafe.Waiter.Queries.DAL.Models.OpenTab>
@{
    ViewBag.Title = "CQRS Tutorial - List of Open Tabs";
}

<div class="jumbotron">
    <h1>List of Open Tabs</h1>
</div>
<table class="table">
    <thead>
        <tr>
            <td>Table Number</td>
            <td>Waiter</td>
            <td>Status</td>
            <td></td>
        </tr>
    </thead>
    @foreach (var openTab in Model)
    {
        <tr>
            <td>@openTab.TableNumber</td>
            <td>@openTab.Waiter</td>
            <td>@openTab.Status</td>
            <td>@Html.ActionLink("Edit", "Details", new { tabId = openTab.Id })</td>
        </tr>
    }
</table>